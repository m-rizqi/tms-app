<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TokoManagementSystem" parent="Theme.MaterialComponents.DayNight.DarkActionBar"/>
    <style name="Theme.TokoManagementSystem.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_100</item>
        <item name="colorPrimaryVariant">@color/primary_20</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>
    <style name="Theme.TokoManagementSystem.SplashScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/primary_100</item>
    </style>

<!--    TextStyle-->
    <style name="TextAppearance">TMS TextAppearance</style>
    <style name="TextAppearance.Headline4">
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">29sp</item>
    </style>
    <style name="TextAppearance.Headline5">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="TextAppearance.Headline6">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="TextAppearance.Subtitle1">
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextAppearance.Subtitle2">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="TextAppearance.Body1">
        <item name="fontFamily">@font/karla_regular</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextAppearance.Body2">
        <item name="fontFamily">@font/karla_regular</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextAppearance.Button">
        <item name="fontFamily">@font/karla_medium</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="TextAppearance.Caption">
        <item name="fontFamily">@font/karla_regular</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="TextAppearance.Overline">
        <item name="fontFamily">@font/karla_regular</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="TextAppearance.KarlaMedium16">
        <item name="fontFamily">@font/karla_medium</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextAppearance.RubikMedium14">
        <item name="fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="TextInputLayout">TextInputLayout Style</style>
    <style name="TextInputLayout.Default" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxStrokeColor">@color/black_80</item>
        <item name="boxStrokeErrorColor">@color/danger_main</item>
        <item name="errorTextColor">@color/danger_main</item>
        <item name="errorIconTint">@color/danger_main</item>
        <item name="errorTextAppearance">@style/TextAppearance.Caption</item>
        <item name="helperTextTextColor">@color/black_80</item>
        <item name="helperTextTextAppearance">@style/TextAppearance.Caption</item>
        <item name="expandedHintEnabled">false</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="TextInputEditText">TextInputEditText</style>
    <style name="TextInputEditText.Default">
        <item name="android:textColorHint">@color/black_60</item>
        <item name="android:textColor">@color/black_100</item>
        <item name="fontFamily">@font/karla_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MaterialButton">MaterialButton Style</style>
    <style name="MaterialButton.Default" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="background">@color/white</item>
        <item name="fontFamily">@font/karla_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>