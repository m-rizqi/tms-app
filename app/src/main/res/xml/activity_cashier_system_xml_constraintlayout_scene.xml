<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="307">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnClick />
        <OnSwipe motion:touchAnchorId="@+id/mcv_cashier_system_items" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/mcv_cashier_system_items"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/mcv_cashier_system_app_bar" />
        <Constraint
            android:id="@+id/mcv_cashier_system_total_2"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            android:alpha="1" />
        <Constraint
            android:id="@+id/mcv_cashier_system_total_2"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible"
            android:alpha="0" />
        <Constraint
            android:id="@+id/mcv_cashier_system_total_2"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible"
            android:alpha="1" />
        <Constraint
            android:id="@+id/mcv_cashier_system_total_2"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible"
            android:alpha="1" />
        <Constraint
            android:id="@+id/mcv_cashier_system_total_2"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible"
            android:alpha="1"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp" />
    </ConstraintSet>
</MotionScene>