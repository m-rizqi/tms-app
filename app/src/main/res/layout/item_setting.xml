<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/iv_item_setting"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="centerInside"
            />

        <TextView
            android:id="@+id/tv_item_setting_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/iv_item_setting"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="12dp"
            style="@style/TextAppearance.Subtitle1"
            android:textColor="@color/black_100"
            tools:text="Pengaturan"
            />

        <TextView
            android:id="@+id/tv_item_setting_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/tv_item_setting_title"
            app:layout_constraintEnd_toEndOf="@id/tv_item_setting_title"
            app:layout_constraintTop_toBottomOf="@id/tv_item_setting_title"
            android:layout_marginTop="4dp"
            style="@style/TextAppearance.Body2"
            android:textColor="@color/black_80"
            tools:text="Pengaturan"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>