<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="18dp">

            <ImageButton
                android:id="@+id/ib_success_xmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@drawable/ic_xmark"
                android:background="@android:color/transparent"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/vector_complete"
                />

            <TextView
                android:id="@+id/tv_success_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                style="@style/TextAppearance.Headline6"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/primary_100"
                android:text="@string/success"
                />

            <TextView
                android:id="@+id/tv_success_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                style="@style/TextAppearance.Body1"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black_80"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_success_close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/MaterialButton.Default"
                android:text="@string/close"
                android:layout_marginTop="32dp"
                />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>