<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp">

        <TextView
            android:id="@+id/tv_item_unit_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_item_unit_delete"
            android:layout_marginEnd="16dp"
            style="@style/TextAppearance.Body1"
            android:textColor="@color/black_100"
            tools:text="Nama Unit"
            />

        <ImageButton
            android:id="@+id/btn_item_unit_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/btn_item_unit_edit"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_trash_light"
            android:layout_marginEnd="16dp"
            />

        <ImageButton
            android:id="@+id/btn_item_unit_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/btn_item_unit_delete"
            app:layout_constraintBottom_toBottomOf="@id/btn_item_unit_delete"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_pencil_light"
            />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/tv_item_unit_name"
            app:dividerColor="@color/black_20"
            android:layout_marginTop="10dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>